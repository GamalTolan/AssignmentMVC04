@{
    var departments = new SelectList(ViewBag.Departments, "Id", "Name"); //ايه المشكله هنا الي مخليه Create مش شغاله
 
}





<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div>
    
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Phone"></label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
            <option value="@null">--Select Department--</option>
        </select>
    </div>

    

    <div class="form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <br />
        <input type="file" class="form-control-file" asp-for="Image" />
    </div>
    


    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
