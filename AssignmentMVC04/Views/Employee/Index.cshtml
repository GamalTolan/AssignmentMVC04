@model IEnumerable<Company.Service.Interfaces.Dto.EmployeeDto>


<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

<div class="mt-5 alert alert-danger"></div>
<h3>@ViewBag.Message</h3>

<div class="mt-5 alert alert-primary"></div>
<h3>@ViewData["TextMessage"]</h3>

<div class="mt-5 alert alert-dark"></div>
<h3>@TempData["TextTempMessage"]</h3>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Image)</th>

                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Age)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Address)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Department)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Salary)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Email)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().Phone)</th>
                <th>@Html.DisplayNameFor(D => Model.FirstOrDefault().CreateAT)</th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>
                    <img src="~/Files/Images/@Employee.ImageUrl" height="50" width="50" alt=""/>
                    </td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Employee.Department</td>
                    <td>@Employee.Salary</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.Phone</td>
                    <td>@Employee.CreateAT</td>
                <partial name="_ActionButtonsPartialView" model="@Employee.Id.ToString()" />

                </tr>
            
            }
        </tbody>
    </table>
     
}

else
{
    <div class="mt-5 alert alert-warning"></div>
    <h3>There Is no Employees</h3>
}